<h1>Listing tournaments</h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Email/Name:</b>
  <%= @user.email %>
</p>
<p>
  <b>Team:</b>
  <%= @user.team.name if @user.team %>
</p>
<br/><%= link_to 'New Tournament', new_user_tournament_path(@user) %><br/>
<h2>Tournaments:</h2>
<% @tournaments.each do |tournament| %>
  <%= tournament.name %>:
  <%= link_to 'Questions/Tags', tournament_questions_path(tournament) %>
  <% if tournament.tags.empty? %>
    Create Tags Before you can view...
  <% elsif tournament.games.empty? %>
    <%= link_to "Build", user_tournament_path(@user,tournament) %>
  <% else %>
    <%= link_to "View", user_tournament_path(@user,tournament) %>
  <% end %>
<br/>
<% end %>
<br/><%= link_to 'New Tournament', new_user_tournament_path(@user) %><br/>
<br/>

<%= link_to 'Edit', edit_user_path(@user) %> |
