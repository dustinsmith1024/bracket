<h1>Listing tournaments for <%= @user.name %></h1>

<p id="notice"><%= notice %></p>

<p>
  <label><b>Favorite Team:</b></label>
  <%= @user.team.name if @user.team %>
</p>
<h2>Tournaments:</h2>
<table>
<% @tournaments.each_with_index do |tournament,index| %>
<tr><td>  <%= index + 1 %>. <b><%= tournament.name %>:</b></td>
<td> <%= link_to 'Questions', tournament_questions_url(tournament), :class => "ajax" %></td>
<td>  <% if tournament.tags.empty? %>
    <-- Fill out questions to build your bracket!
  <% elsif tournament.games.empty? %>
    <%= link_to "Build", user_tournament_url(@user,tournament), :class => "ajax-close" %>
  <% else %>
    <%= link_to "View", user_tournament_url(@user,tournament), :class => "ajax-close" %>
  <% end %>
</td>
</tr>
<% end %>
</table>
<br/><%= link_to 'New Tournament', new_user_tournament_url(@user), :class => "ajax" %><br/>
<br/>

